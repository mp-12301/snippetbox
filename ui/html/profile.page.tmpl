{{template "base" .}}

{{define "title"}}User Profile{{end}}

{{define "main"}}
    {{with .User}}
        <h2>User Profile</h2>
        <table>
            <tr>
                <td>Name</td><td>{{.Name}}</td>
            </tr>
            <tr>
                <td>Email</td><td>{{.Email}}</td>
            </tr>
            <tr>
                <td>Joined</td><td>{{foobar .Created}}</td>
            </tr>
        </table>
    {{end}}
{{end}}
